{
	"name": "better-commits",
	"displayName": "Better Commits",
	"description": "VSCode extension that keeps your commit messages consistent",
	"version": "1.5.1",
	"publisher": "ugi-dev",
	"engines": {
		"vscode": "^1.80.0"
	},
	"license": "MIT",
	"homepage": "https://ugi.dev",
	"bugs": {
		"url": "https://github.com/ugi-dev/better-commits/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ugi-dev/better-commits"
	},
	"icon": "icon.png",
	"keywords": [
		"git",
		"commits",
		"vscode",
		"better commits",
		"ugi-dev"
	],
	"categories": [
		"Other"
	],
	"main": "./out/index.js",
	"activationEvents": [],
	"contributes": {
		"commands": [
			{
				"command": "extension.betterCommits",
				"title": "Better Commits",
				"category": "Other",
				"icon": "icon.png"
			}
		],
		"menus": {
			"scm/title": [
				{
					"command": "extension.betterCommits",
					"group": "navigation",
					"when": "scmProvider == git"
				}
			]
		},
		"keybindings": [
			{
				"command": "extension.betterCommits",
				"key": "ctrl+alt+enter",
				"mac": "cmd+shift+enter"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "npx @biomejs/biome format --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.80.0",
		"@vscode/test-electron": "^2.2.3",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"typescript": "^4.9.5"
	}
}
